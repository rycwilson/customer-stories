          .row 
            .col-md-12

              .col-md-3.pricing-col
                = render( \
                    'site/pricing_column',
                    { title: 'Retarget Promote', 
                      byline: 'Curate, Promote, Measure',
                      amount: '$1990/mo',
                      included: Array.new(8, true) + Array.new(4, false) })

              .col-md-3.pricing-col
                = render( \
                    'site/pricing_column',
                    { title: 'CRM Promote', 

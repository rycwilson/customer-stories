                      included: Array.new(9, true) + Array.new(2, false) + Array.new(1, true) })

              .col-md-3.pricing-col
                = render( \
                    'site/pricing_column',
                    { title: 'Audience Promote', 
                      byline: 'Target Ideal Known & Unknown Prospects',

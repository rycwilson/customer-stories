= content_tag :div, 'class' => 'new-contact hidden', "data-#{controller_id}-target" => "#{contact_type}Fields" do
  = parent_form_or_fields.fields_for( \
      contact_type.to_sym,
      parent_form_or_fields.object.send("build_#{contact_type}")) do |user_fields|

    = user_fields.hidden_field( \
        :id,
        value: '',
        disabled: true,
        data: { "#{controller_id}-target" => "#{contact_type}Field" })

    = user_fields.hidden_field( \
        :sign_up_code,
        value: 'csp_beta',
        disabled: true,
        data: { "#{controller_id}-target" => "#{contact_type}Field" })

    = user_fields.hidden_field( \
        :password,
        disabled: true,
        data: { "#{controller_id}-target" => "#{contact_type}Field" })

    .form-group
      = user_fields.label(:first_name, 'First Name')
      / tabindex: '-1' allows manual focus
      = user_fields.text_field( \
          :first_name,
          class: 'form-control',
          required: true,
          disabled: true,
          tabindex: '-1',
          data: { "#{controller_id}-target" => "#{contact_type}Field" })
      .help-block.with-errors

    .form-group
      = user_fields.label(:last_name, 'Last Name')
      = user_fields.text_field( \
          :last_name,
          class: 'form-control',
          required: true,
          disabled: true,
          data: { "#{controller_id}-target" => "#{contact_type}Field" })
      .help-block.with-errors

    .form-group
      = user_fields.label(:email, 'Email')
      = user_fields.email_field( \
          :email,
          class: 'form-control',
          required: true,
          disabled: true,
          data: { "#{controller_id}-target" => "#{contact_type}Field" })
      .help-block.with-errors
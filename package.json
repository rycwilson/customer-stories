{
  "name": "csp-assets",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "",
    "build:landing-js": "esbuild app/typescript/emit/landing.js --outfile=app/assets/builds/landing/bundle.js --minify --bundle",
    "build:landing-css": "./sass-build.sh app/assets/stylesheets/landing/main.scss:app/assets/builds/landing/main.css",
    "build:app-js": "esbuild app/typescript/emit/app.js --outfile=app/assets/builds/app/bundle.js --minify --bundle",
    "build:app-ads-js": "esbuild app/typescript/emit/adwords_ads/preview.js --outfile=app/assets/builds/app/ads_preview/bundle.js --minify",
    "build:app-css": "./sass-build.sh app/assets/stylesheets/app/main.scss:app/assets/builds/app/main.css app/assets/stylesheets/app/ads_preview/main.scss:app/assets/builds/app/ads_preview/main.css app/assets/stylesheets/app/errors.scss:app/assets/builds/app/errors.css",
    "build:stories-js": "esbuild app/typescript/emit/stories/index.js app/typescript/emit/stories/index2.js app/typescript/emit/stories/show.js --outdir=app/assets/builds/stories --minify --bundle",
    "build:stories-css": "./sass-build.sh app/assets/stylesheets/views/stories/index.scss:app/assets/builds/stories/main.css app/assets/stylesheets/views/stories/index2.scss:app/assets/builds/stories/main2.css",
    "build:plugins-css": "./sass-build.sh app/assets/stylesheets/views/plugins/index.scss:app/assets/builds/plugins/main.css",
    "build:custom-css": "./sass-build.sh --custom",
    "_comment_jsbundling_rails": "Running bin/rails assets:precompile will call \"yarn build\"",
    "build": "npx tsc && yarn build:landing-js && yarn build:app-js && yarn build:app-ads-js && yarn build:stories-js",
    "_comment_cssbundling_rails": "Running bin/rails assets:precompile will call \"yarn build:css\"",
    "build:css": "yarn build:landing-css --no-source-map && yarn build:app-css --no-source-map && yarn build:stories-css --no-source-map && yarn build:plugins-css --no-source-map && yarn build:custom-css --no-source-map",
    "_comment_develop_in_watch_mode": "Procfile.dev will call these commands",
    "watch:js": "concurrently \"npx tsc --watch\" \"yarn build:landing-js --watch --sourcemap\" \"yarn build:app-js --watch --sourcemap\" \"yarn build:app-ads-js --watch --sourcemap\" \"yarn build:stories-js --watch --sourcemap\"",
    "watch:css": "concurrently \"yarn build:landing-css --watch\" \"yarn build:app-css --watch\" \"yarn build:stories-css --watch\" \"yarn build:plugins-css --watch\" \"yarn build:custom-css --watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dlindblodev/csp.git"
  },
  "author": "Ryan Wilson",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dlindblodev/csp/issues"
  },
  "homepage": "https://github.com/dlindblodev/csp#readme",
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.12",
    "@rails/request.js": "^0.0.12",
    "@rails/ujs": "^7.0.8",
    "animate.css": "^4.1.1",
    "blueimp-file-upload": "^10.32.0",
    "bootoast": "^1.1.4",
    "bootstrap-datepicker": "^1.9.0",
    "bootstrap-daterangepicker": "^3.1.0",
    "bootstrap-horizon": "^1.0.1",
    "bootstrap-jasny": "^3.2.0",
    "bootstrap-sass": "3.3.6",
    "bootstrap-switch": "3.3.4",
    "bootstrap-validator": "^0.11.9",
    "css-element-queries": "^1.0.2",
    "datatables.net-bs": "^1.12.1",
    "datatables.net-plugins": "^1.13.6",
    "datatables.net-rowgroup-bs": "^1.4.0",
    "flot": "^0.8.3",
    "flot-orderbars": "^1.0.0",
    "font-awesome": "^4.7.0",
    "html2rtf": "^0.2.1",
    "imagesloaded": "4.1",
    "jquery-csv": "^1.0.21",
    "jquery-textfill": "^0.6.0",
    "jquery-ui": "^1.14.0",
    "jquery.flot.tooltip": "^0.9.0",
    "jquery.inputmask": "^3.2.7",
    "js-cookie": "^3.0.1",
    "magnific-popup": "^0.9.9",
    "parsleyjs": "^2.0.7",
    "responsive-toolkit": "^2.6.3",
    "summernote": "^0.8.20",
    "tinycolor2": "^1.6.0",
    "tom-select": "^2.3.1"
  },
  "devDependencies": {

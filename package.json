    "@types/google.visualization": "^0.0.74",
    "@types/hotwired__turbo": "^8.0.4",
    "@types/imagesloaded": "^4.1.3",
    "@types/jquery": "^3.5.19",
    "@types/jquery.fileupload": "^9.22.6",
    "@types/jqueryui": "^1.12.23",
    "@types/js-cookie": "^3.0.4",
    "@types/rails__request.js": "^0.0.0",
    "@types/rails__ujs": "^6.0.2",
    "@types/summernote": "^0.8.8",
    "@types/tinycolor2": "^1.4.6",
    "concurrently": "^9.1.2",
